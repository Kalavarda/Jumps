<UserControl x:Class="Kalavarda.Jumps.Editor.Controls.LocationPropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Width"/>
        <TextBox x:Name="_tbWidth" Grid.Column="1" LostFocus="_tbWidth_OnLostFocus"/>

        <TextBlock Text="Height" Grid.Row="1"/>
        <TextBox x:Name="_tbHeight" Grid.Row="1" Grid.Column="1" LostFocus="_tbHeight_OnLostFocus"/>
    </Grid>
</UserControl>
