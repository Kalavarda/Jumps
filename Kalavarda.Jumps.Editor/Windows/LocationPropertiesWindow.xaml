<Window x:Class="Kalavarda.Jumps.Editor.Windows.LocationPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Kalavarda.Jumps.Editor.Controls"
        Background="{StaticResource WindowBackground}"
        Title="Location Properties" Height="100" Width="200" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Window.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource DefaultTextBox}"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlock}"/>
    </Window.Resources>
    <controls:LocationPropertiesControl x:Name="_properties" VerticalAlignment="Top" Margin="{StaticResource DefaultMargin}"/>
</Window>
