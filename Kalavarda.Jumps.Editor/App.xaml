<Application x:Class="Kalavarda.Jumps.Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Thickness x:Key="DefaultMargin">
            4
        </Thickness>

        <Style TargetType="TextBox" x:Key="DefaultTextBox">
            <Setter Property="Margin" Value="{StaticResource DefaultMargin}"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="DefaultTextBlock">
            <Setter Property="Margin" Value="{StaticResource DefaultMargin}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <SolidColorBrush x:Key="WindowBackground" Color="DimGray"/>
    </Application.Resources>
</Application>
